# SSSEA Environment Configuration

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# LLM Configuration (for Intent Analysis)
OPENAI_API_KEY=sk-xxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Reasoning Engine Selection
# Options: "roma" (ROMA recursive reasoning), "openai" (direct OpenAI), "mock" (for testing)
REASONING_ENGINE=roma

# ROMA Configuration (when REASONING_ENGINE=roma)
# ROMA provider: openrouter, openai, anthropic
ROMA_PROVIDER=openrouter
ROMA_MODEL=openai/gpt-4o
# ROMA API Key (for OpenRouter or other provider)
# Get OpenRouter key: https://openrouter.ai/keys
ROMA_API_KEY=sk-or-xxx

# Web3 RPC Configuration
MAINNET_RPC_URL=https://eth.llamarpc.com
# Alternative: https://rpc.ankr.com/eth
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# TEE/Anvil Configuration
ANVIL_BINARY_PATH=anvil
ANVIL_BASE_PORT=8545
ANVIL_FORK_BLOCK=latest
ANVIL_TIMEOUT_SECONDS=30

# OML Attestation (Mock for MVP)
OML_ATTESTATION_ENABLED=true
TEE_HARDWARE_FINGERPRINT=mock_tee_fp_0x5d2a

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
ALLOWED_CALLERS=*
MAX_TX_SIZE_BYTES=131072
